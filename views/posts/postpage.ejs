<%- include("../partials/header.ejs") %>
<%- include("../partials/navbar.ejs") %> 
<div class = "container pb-5">
    <h1> <%= post.title %> </h1>
    <h3 class = "h5 text-muted">Created By: 
        <%if(post.User){ %>
            <a href="/users/profile/<%=post.User.username%>?require=false"><%=post.User.username%></a> <% } else { %> 
                A Former Creator
                <% } %>
    </h3>
    <div class = "container" style="height: 50vh;">
        <img src="<%=post.image%>" alt = "Project Image" class = "d-block h-100 mx-auto">
    </div>
    <div class = "container-fluid d-flex">
        <%let liked = false%>
        <%post.Like.forEach(like => { %>
            <%if(like.Likes.userId === user.id) { %>
                <%liked = true;%>
                <% }})%>
        <%if(liked) {%>
        <form action='/posts/<%=post.id%>/unlike' method='POST' class = "m-3">
            <button type="submit" class = "btn btn-danger" >
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" focusable="false" role = "img" aria-hidden = "true" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                  </svg>
                Liked
            </button>
        </form>
        <%} else {%>
        <form action='/posts/<%=post.id%>/like' method='POST' class = "m-3">
            <button type="submit" class = "btn btn-outline-danger" >
                <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-heart" focusable="false" role = "img" aria-hidden = "true" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd" d="M8 2.748l-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                  </svg>
                Like&ensp; 
            </button>
        </form> 
        <% } %>
        <p class = "m-3 pt-1">Likes: <%=post.Like.length%></p>
    </div>
    
    
    <div class = "container-fluid blockquote">
        <p> <%= post.content %> </p>
    </div>
    <br><br>
    <div class = "container-fluid text-center">
        <h3>Comments</h3>
        <ul class = "list-group w-75 mx-auto text-left">
            <% post.Comments.forEach(comment => { %>
                <%if(!comment.User) {%> 
                    <li class = "list-group-item"><%=comment.text%> <br>-- A Former Creator </li> 
                    <% } else { %>
                    <li class = "list-group-item"><%=comment.text%> <br>-- <a href="/users/profile/<%=comment.User.username%>?require=false"><%=comment.User.username%></a> </li>
            <% }}) %>
        </ul>
        <% if(user) { %>
            <% if(post.userId === user.id) {%>
            <a href='/posts/<%=post.id%>/edit'>Edit Post</a><br>
            <form onsubmit = 'return confirm("Do you want to delete this post?")' action='/posts/<%=post.id%>?_method=DELETE' method='POST'>
                <input type="submit" value="Delete Post">
            </form>
        <% }} %>
        <br><br>
        <form action='/posts/<%=post.id%>/comment' method='POST' class = "w-75 mx-auto form-group">
            <h4>Comment:</h4>
            <textarea type="text" name="text" class = "form-control" rows = "3"></textarea>
            <br>
            <input type="submit" class = "btn btn-primary" value="Submit">
        </form>
        
    </div>
    
</div>



<%- include("../partials/footer.ejs") %>